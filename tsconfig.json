{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": [
            "vite/client",
            "node"
        ],
        "baseUrl": "src",
        "paths": {
            "components/*": [
                "components/*"
            ],
            "context/*": [
                "context/*"
            ],
            "utils/*": [
                "utils/*"
            ],
            "api/*": [
                "api/*"
            ],
            "types/*": [
                "types/*"
            ],
            "assets/*": [
                "assets/*"
            ],
            "signer/*": [
                "domain/signer/*"
            ],
            "client/*": [
                "domain/client/*"
            ],
        }
    },
    "include": [
        "src",
        "src/App.tsx"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}